{
	"name": "devcontainer template",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"workspaceMount": "source=${localWorkspaceFolder}/,target=/home/vscode/workspace,type=bind",
	"workspaceFolder": "/home/vscode/workspace", 
	"extensions": [
		"ms-vscode.cpptools",
		"ms-vscode.cpptools-extension-pack",
		"ms-vscode.cmake-tools",
		"vadimcn.vscode-lldb",
		"VisualStudioExptTeam.vscodeintellicode",
		"VisualStudioExptTeam.intellicode-api-usage-examples",
		"ms-vscode.makefile-tools",
		"ms-vscode.cpptools-themes",
		"twxs.cmake",
		"llvm-vs-code-extensions.vscode-clangd",
		"cheshirekow.cmake-format"
	],
	"remoteUser": "vscode",
	"runArgs": [
		"-it",
		"--privileged",
		"--disable-content-trust=true",

		"-e",
		"DISPLAY=:0",
		"-e",
		"WAYLAND_DISPLAY=wayland-0",
		"-v",
		"/tmp/.X11-unix:/tmp/.X11-unix",

		"-e",
		"PULSE_COOKIE=/tmp/pulse/cookie",
		"-e",
		"PULSE_SERVER=unix:/tmp/pulse/native ",
		"-v",
		"/run/user/1000/pulse/native:/tmp/pulse/native",
		"-v",
		"/home/vscode/.config/pulse/cookie:/tmp/pulse/cookie:ro",
		
		"--device",
		"/dev/dri:/dev/dri",
		"--device",
		"/dev/snd:/dev/snd",
		"--device",
		"/dev/input:/dev/input",

		"--net",
		"host",
		"-v",
		"/var/lib/dbus:/var/lib/dbus",
		"-v",
		"/var/run/dbus:/var/run/dbus",
		"-v",
		"/etc/machine-id:/etc/machine-id"
	]
}
